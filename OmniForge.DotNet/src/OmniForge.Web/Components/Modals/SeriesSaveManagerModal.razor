{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.7); z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger bg-opacity-25">
                    <h5 class="modal-title"><i class="bi bi-trash me-2"></i>Confirm Delete</h5>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>"@selectedSeries.Name"</strong>?</p>
                    <p class="text-danger"><i class="bi bi-exclamation-circle me-1"></i>This action <strong>cannot be undone</strong>. The following data will be permanently lost:</p>
                    <ul>
                        <li>Deaths: @(selectedSeries.Snapshot?.Deaths ?? 0)</li>
                        <li>Swears: @(selectedSeries.Snapshot?.Swears ?? 0)</li>
                        <li>Screams: @(selectedSeries.Snapshot?.Screams ?? 0)</li>
                        @if ((selectedSeries.Snapshot?.Bits ?? 0) > 0)
                        {
                            <li>Bits: @(selectedSeries.Snapshot?.Bits ?? 0)</li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelConfirmation">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Delete Permanently
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public string UserId { get; set; } = "";
    [Parameter] public EventCallback OnSeriesLoaded { get; set; }

    private List<Series> seriesList = new();
    private bool isLoading = false;
    private bool isSaving = false;
    private bool isProcessing = false;
    private string? successMessage;
    private string? errorMessage;

    // New save form
    private string newSeriesName = "";
    private string newSeriesDescription = "";

    // Confirmation dialogs
    private bool showLoadConfirm = false;
    private bool showOverwriteConfirm = false;
    private bool showDeleteConfirm = false;
    private Series? selectedSeries = null;

    protected override async Task OnParametersSetAsync()
    {
        if (Show && !string.IsNullOrEmpty(UserId) && !isLoading)
        {
            await LoadSeriesList();
        }
    }

    private async Task LoadSeriesList()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            var series = await SeriesRepository.GetSeriesAsync(UserId);
            seriesList = series.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load series: {ex.Message}";
            seriesList = new List<Series>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateNewSave()
    {
        if (string.IsNullOrWhiteSpace(newSeriesName)) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var currentCounters = await CounterRepository.GetCountersAsync(UserId);
            var series = new Series
            {
                UserId = UserId,
                Name = newSeriesName.Trim(),
                Description = newSeriesDescription?.Trim() ?? string.Empty,
                Snapshot = currentCounters ?? new Counter { TwitchUserId = UserId },
                CreatedAt = DateTimeOffset.UtcNow,
                LastUpdated = DateTimeOffset.UtcNow,
                IsActive = false
            };

            await SeriesRepository.CreateSeriesAsync(series);

            successMessage = $"Series '{newSeriesName}' saved successfully!";
            newSeriesName = "";
            newSeriesDescription = "";
            await LoadSeriesList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving series: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowLoadConfirmation(Series series)
    {
        selectedSeries = series;
        showLoadConfirm = true;
    }

    private void ShowOverwriteConfirmation(Series series)
    {
        selectedSeries = series;
        showOverwriteConfirm = true;
    }

    private void ShowDeleteConfirmation(Series series)
    {
        selectedSeries = series;
        showDeleteConfirm = true;
    }

    private void CancelConfirmation()
    {
        showLoadConfirm = false;
        showOverwriteConfirm = false;
        showDeleteConfirm = false;
        selectedSeries = null;
    }

    private async Task ConfirmLoad()
    {
        if (selectedSeries == null) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            // Create a new counter with the snapshot values
            var restoredCounter = new Counter
            {
                TwitchUserId = UserId,
                Deaths = selectedSeries.Snapshot.Deaths,
                Swears = selectedSeries.Snapshot.Swears,
                Screams = selectedSeries.Snapshot.Screams,
                Bits = selectedSeries.Snapshot.Bits,
                CustomCounters = selectedSeries.Snapshot.CustomCounters ?? new System.Collections.Generic.Dictionary<string, int>(),
                LastUpdated = DateTimeOffset.UtcNow,
                StreamStarted = null, // Don't restore stream state
                LastNotifiedStreamId = null
            };

            // Save the restored counters
            await CounterRepository.SaveCountersAsync(restoredCounter);

            // Notify overlay
            await OverlayNotifier.NotifyCounterUpdateAsync(UserId, restoredCounter);

            // Mark series as active
            selectedSeries.IsActive = true;
            selectedSeries.LastUpdated = DateTimeOffset.UtcNow;
            await SeriesRepository.UpdateSeriesAsync(selectedSeries);

            successMessage = $"Loaded '{selectedSeries.Name}' successfully! Counters updated.";
            CancelConfirmation();
            await LoadSeriesList();
            await OnSeriesLoaded.InvokeAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading series: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task ConfirmOverwrite()
    {
        if (selectedSeries == null) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var currentCounters = await CounterRepository.GetCountersAsync(UserId);

            selectedSeries.Snapshot = currentCounters ?? new Counter { TwitchUserId = UserId };
            selectedSeries.LastUpdated = DateTimeOffset.UtcNow;

            await SeriesRepository.UpdateSeriesAsync(selectedSeries);

            successMessage = $"'{selectedSeries.Name}' updated with current counter values!";
            CancelConfirmation();
            await LoadSeriesList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating series: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task ConfirmDelete()
    {
        if (selectedSeries == null) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            await SeriesRepository.DeleteSeriesAsync(UserId, selectedSeries.Id);

            successMessage = $"'{selectedSeries.Name}' deleted successfully.";
            CancelConfirmation();
            await LoadSeriesList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting series: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task Close()
    {
        CancelConfirmation();
        successMessage = null;
        errorMessage = null;
        Show = false;
        await ShowChanged.InvokeAsync(false);
    }
}
