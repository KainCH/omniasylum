@using OmniForge.Core.Entities
@using OmniForge.Core.Interfaces
@using System.Net.Http.Json
@using System.Text.Json
@using System.Text.Json.Serialization
@inject HttpClient Http

@if (Show)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-save me-2"></i>Series Save Manager</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    @if (isLoading)
                    {
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="bi bi-check-circle me-2"></i>@successMessage
                                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                            </div>
                        }

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Manage saved counter states for different game series. Save your current counters, load previous saves, or update existing saves.
                        </div>

                        @* New Save Form *@
                        <div class="card bg-success bg-opacity-10 border-success mb-3">
                            <div class="card-header bg-success bg-opacity-25">
                                <i class="bi bi-plus-circle me-2"></i>Create New Save
                            </div>
                            <div class="card-body">
                                <div class="row g-2">
                                    <div class="col-md-5">
                                        <input type="text" class="form-control" placeholder="Series Name (e.g., Dark Souls Run)"
                                               @bind="newSeriesName" @bind:event="oninput" maxlength="100" />
                                    </div>
                                    <div class="col-md-5">
                                        <input type="text" class="form-control" placeholder="Description (optional)"
                                               @bind="newSeriesDescription" @bind:event="oninput" />
                                    </div>
                                    <div class="col-md-2">
                                        <button class="btn btn-success w-100" @onclick="CreateNewSave"
                                                disabled="@(string.IsNullOrWhiteSpace(newSeriesName) || isSaving)">
                                            @if (isSaving)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-save me-1"></i>
                                            }
                                            Save
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Existing Saves List *@
                        @if (seriesList.Count == 0)
                        {
                            <div class="text-center text-muted p-4">
                                <i class="bi bi-folder2-open fs-1 d-block mb-2"></i>
                                No saved series yet. Create your first save above!
                            </div>
                        }
                        else
                        {
                            <h6 class="mb-3"><i class="bi bi-collection me-2"></i>Saved Series (@seriesList.Count)</h6>
                            <div class="list-group">
                                @foreach (var series in seriesList.OrderByDescending(s => s.SavedAt))
                                {
                                    <div class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    @series.SeriesName
                                                    @if (series.IsActive)
                                                    {
                                                        <span class="badge bg-primary ms-2">Active</span>
                                                    }
                                                </h6>
                                                @if (!string.IsNullOrEmpty(series.Description))
                                                {
                                                    <p class="mb-1 text-muted small">@series.Description</p>
                                                }
                                                <div class="d-flex gap-3 mt-2">
                                                    <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Deaths: @series.Deaths</span>
                                                    <span class="badge bg-warning text-dark"><i class="bi bi-chat-dots me-1"></i>Swears: @series.Swears</span>
                                                    <span class="badge bg-info text-dark"><i class="bi bi-emoji-dizzy me-1"></i>Screams: @series.Screams</span>
                                                    @if (series.Bits > 0)
                                                    {
                                                        <span class="badge bg-purple" style="background-color: #9147ff;"><i class="bi bi-gem me-1"></i>Bits: @series.Bits</span>
                                                    }
                                                </div>
                                                <small class="text-muted">
                                                    Saved: @series.SavedAt.ToLocalTime().ToString("g")
                                                </small>
                                            </div>
                                            <div class="btn-group-vertical btn-group-sm">
                                                <button class="btn btn-outline-primary" @onclick="() => ShowLoadConfirmation(series)" title="Load this save">
                                                    <i class="bi bi-box-arrow-in-down"></i> Load
                                                </button>
                                                <button class="btn btn-outline-warning" @onclick="() => ShowOverwriteConfirmation(series)" title="Overwrite with current counters">
                                                    <i class="bi bi-arrow-repeat"></i> Overwrite
                                                </button>
                                                <button class="btn btn-outline-danger" @onclick="() => ShowDeleteConfirmation(series)" title="Delete this save">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" @onclick="Close">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@* Load Confirmation Dialog *@
@if (showLoadConfirm && selectedSeries != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.7); z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-warning">
                <div class="modal-header bg-warning bg-opacity-25">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Load</h5>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to load <strong>"@selectedSeries.SeriesName"</strong>?</p>
                    <p class="text-danger"><i class="bi bi-exclamation-circle me-1"></i>This will <strong>replace your current counter values</strong> with the saved values:</p>
                    <ul>
                        <li>Deaths: @selectedSeries.Deaths</li>
                        <li>Swears: @selectedSeries.Swears</li>
                        <li>Screams: @selectedSeries.Screams</li>
                        @if (selectedSeries.Bits > 0)
                        {
                            <li>Bits: @selectedSeries.Bits</li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelConfirmation">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="ConfirmLoad" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Load Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Overwrite Confirmation Dialog *@
@if (showOverwriteConfirm && selectedSeries != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.7); z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-warning">
                <div class="modal-header bg-warning bg-opacity-25">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Overwrite</h5>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to overwrite <strong>"@selectedSeries.SeriesName"</strong>?</p>
                    <p class="text-danger"><i class="bi bi-exclamation-circle me-1"></i>This will <strong>replace the saved values</strong> with your current counter values.</p>
                    <p>Current saved values that will be lost:</p>
                    <ul>
                        <li>Deaths: @selectedSeries.Deaths</li>
                        <li>Swears: @selectedSeries.Swears</li>
                        <li>Screams: @selectedSeries.Screams</li>
                        @if (selectedSeries.Bits > 0)
                        {
                            <li>Bits: @selectedSeries.Bits</li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelConfirmation">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="ConfirmOverwrite" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Overwrite Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Delete Confirmation Dialog *@
@if (showDeleteConfirm && selectedSeries != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.7); z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger bg-opacity-25">
                    <h5 class="modal-title"><i class="bi bi-trash me-2"></i>Confirm Delete</h5>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>"@selectedSeries.SeriesName"</strong>?</p>
                    <p class="text-danger"><i class="bi bi-exclamation-circle me-1"></i>This action <strong>cannot be undone</strong>. The following data will be permanently lost:</p>
                    <ul>
                        <li>Deaths: @selectedSeries.Deaths</li>
                        <li>Swears: @selectedSeries.Swears</li>
                        <li>Screams: @selectedSeries.Screams</li>
                        @if (selectedSeries.Bits > 0)
                        {
                            <li>Bits: @selectedSeries.Bits</li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelConfirmation">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Delete Permanently
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public string UserId { get; set; } = "";
    [Parameter] public EventCallback OnSeriesLoaded { get; set; }

    private List<SeriesSaveDto> seriesList = new();
    private bool isLoading = false;
    private bool isSaving = false;
    private bool isProcessing = false;
    private string? successMessage;
    private string? errorMessage;

    // New save form
    private string newSeriesName = "";
    private string newSeriesDescription = "";

    // Confirmation dialogs
    private bool showLoadConfirm = false;
    private bool showOverwriteConfirm = false;
    private bool showDeleteConfirm = false;
    private SeriesSaveDto? selectedSeries = null;

    protected override async Task OnParametersSetAsync()
    {
        if (Show && !string.IsNullOrEmpty(UserId) && !isLoading)
        {
            await LoadSeriesList();
        }
    }

    private async Task LoadSeriesList()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            var response = await Http.GetFromJsonAsync<SeriesListResponse>("/api/counters/series/list");
            seriesList = response?.Saves?.ToList() ?? new List<SeriesSaveDto>();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load series: {ex.Message}";
            seriesList = new List<SeriesSaveDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateNewSave()
    {
        if (string.IsNullOrWhiteSpace(newSeriesName)) return;

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var request = new { seriesName = newSeriesName.Trim(), description = newSeriesDescription?.Trim() };
            var response = await Http.PostAsJsonAsync("/api/counters/series/save", request);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Series '{newSeriesName}' saved successfully!";
                newSeriesName = "";
                newSeriesDescription = "";
                await LoadSeriesList();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Failed to save series";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving series: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowLoadConfirmation(SeriesSaveDto series)
    {
        selectedSeries = series;
        showLoadConfirm = true;
    }

    private void ShowOverwriteConfirmation(SeriesSaveDto series)
    {
        selectedSeries = series;
        showOverwriteConfirm = true;
    }

    private void ShowDeleteConfirmation(SeriesSaveDto series)
    {
        selectedSeries = series;
        showDeleteConfirm = true;
    }

    private void CancelConfirmation()
    {
        showLoadConfirm = false;
        showOverwriteConfirm = false;
        showDeleteConfirm = false;
        selectedSeries = null;
    }

    private async Task ConfirmLoad()
    {
        if (selectedSeries == null) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var request = new { seriesId = selectedSeries.SeriesId };
            var response = await Http.PostAsJsonAsync("/api/counters/series/load", request);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Loaded '{selectedSeries.SeriesName}' successfully! Counters updated.";
                CancelConfirmation();
                await LoadSeriesList();
                await OnSeriesLoaded.InvokeAsync();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Failed to load series";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading series: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task ConfirmOverwrite()
    {
        if (selectedSeries == null) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var request = new { seriesName = selectedSeries.SeriesName, description = selectedSeries.Description };
            var response = await Http.PutAsJsonAsync($"/api/counters/series/{selectedSeries.SeriesId}", request);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"'{selectedSeries.SeriesName}' updated with current counter values!";
                CancelConfirmation();
                await LoadSeriesList();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Failed to update series";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating series: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task ConfirmDelete()
    {
        if (selectedSeries == null) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var response = await Http.DeleteAsync($"/api/counters/series/{selectedSeries.SeriesId}");

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"'{selectedSeries.SeriesName}' deleted successfully.";
                CancelConfirmation();
                await LoadSeriesList();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Failed to delete series";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting series: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task Close()
    {
        CancelConfirmation();
        successMessage = null;
        errorMessage = null;
        Show = false;
        await ShowChanged.InvokeAsync(false);
    }

    // DTOs for API communication
    private class SeriesListResponse
    {
        [JsonPropertyName("count")]
        public int Count { get; set; }

        [JsonPropertyName("saves")]
        public IEnumerable<SeriesSaveDto> Saves { get; set; } = new List<SeriesSaveDto>();
    }

    private class SeriesSaveDto
    {
        [JsonPropertyName("seriesId")]
        public string SeriesId { get; set; } = "";

        [JsonPropertyName("seriesName")]
        public string SeriesName { get; set; } = "";

        [JsonPropertyName("description")]
        public string Description { get; set; } = "";

        [JsonPropertyName("deaths")]
        public int Deaths { get; set; }

        [JsonPropertyName("swears")]
        public int Swears { get; set; }

        [JsonPropertyName("screams")]
        public int Screams { get; set; }

        [JsonPropertyName("bits")]
        public int Bits { get; set; }

        [JsonPropertyName("savedAt")]
        public DateTimeOffset SavedAt { get; set; }

        [JsonPropertyName("createdAt")]
        public DateTimeOffset CreatedAt { get; set; }

        [JsonPropertyName("isActive")]
        public bool IsActive { get; set; }
    }

    private class ErrorResponse
    {
        [JsonPropertyName("error")]
        public string? Error { get; set; }
    }
}
