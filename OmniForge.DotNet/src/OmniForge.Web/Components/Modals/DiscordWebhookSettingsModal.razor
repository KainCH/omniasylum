@using OmniForge.Web.Components.Settings

@if (Show)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-discord me-2"></i>Discord Settings</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <DiscordIntegrationSettings UserId="@UserId" ShowCancel="true" CloseOnSave="true" OnCloseRequested="Close" />
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public string UserId { get; set; } = "";

    private async Task Close()
    {
        Show = false;
        await ShowChanged.InvokeAsync(false);
    }
}
