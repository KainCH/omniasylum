      loadedUser.Features ??= new FeatureFlags();
      loadedUser.Features.StreamSettings ??= new StreamSettings();

      if (!useDefaultCcls)
      {
        loadedUser.Features.StreamSettings.DefaultContentClassificationLabels = null;
      }
      else
      {
