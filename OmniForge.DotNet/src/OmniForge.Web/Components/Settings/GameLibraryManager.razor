@using OmniForge.Core.Entities
@using OmniForge.Core.Interfaces
@inject IGameLibraryRepository GameLibraryRepository
@inject IGameCountersRepository GameCountersRepository
@inject IGameContextRepository GameContextRepository
@inject IGameSwitchService GameSwitchService
@inject ITwitchApiService TwitchApiService
@inject ICounterLibraryRepository CounterLibraryRepository
@inject ICounterRequestRepository CounterRequestRepository
@inject IGameCounterSetupService GameCounterSetupService
@inject IGameCoreCountersConfigRepository GameCoreCountersConfigRepository
@inject IUserRepository UserRepository
@inject ICounterRepository CounterRepository

@if (isLoading)
{
  <div class="text-center p-5">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>
}
else
{
  @if (!string.IsNullOrEmpty(successMessage))
  {
    <div class="alert alert-success alert-dismissible fade show">
      <i class="bi bi-check-circle me-2"></i>@successMessage
      <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
  }

  @if (!string.IsNullOrEmpty(errorMessage))
  {
    <div class="alert alert-danger alert-dismissible fade show">
      <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
      <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
  }

  <div class="alert alert-info">
    <i class="bi bi-info-circle me-2"></i>
    View games youâ€™ve played before and set per-game counters. Activating a game will swap your live counters to that
    game.
  </div>

  <div class="card mb-3">
    <div class="card-header">
      <i class="bi bi-shield-check me-2"></i>Default Channel CCLs (Fallback)
    </div>
    <div class="card-body">
      <div class="alert alert-info mb-3">
        <i class="bi bi-info-circle me-2"></i>
        Used when the detected game has no admin-configured CCLs.
      </div>

      <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" id="useDefaultCcls" @bind="useDefaultCcls" disabled="@isBusy" />
        <label class="form-check-label" for="useDefaultCcls">Enable default CCL fallback</label>
      </div>

      @if (useDefaultCcls)
      {
        <label class="form-label">Enabled Content Classification Labels</label>
        <div class="d-flex flex-wrap gap-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="defaultCclProfanity" @bind="defaultCclProfanityVulgarity"
              disabled="@isBusy" />
            <label class="form-check-label" for="defaultCclProfanity">Profanity/Vulgarity</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="defaultCclGambling" @bind="defaultCclGambling"
              disabled="@isBusy" />
            <label class="form-check-label" for="defaultCclGambling">Gambling</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="defaultCclViolence" @bind="defaultCclViolentGraphic"
              disabled="@isBusy" />
            <label class="form-check-label" for="defaultCclViolence">Violent/Graphic</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="defaultCclSexual" @bind="defaultCclSexualThemes"
              disabled="@isBusy" />
            <label class="form-check-label" for="defaultCclSexual">Sexual Themes</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="defaultCclDrugs" @bind="defaultCclDrugsIntoxication"
              disabled="@isBusy" />
            <label class="form-check-label" for="defaultCclDrugs">Drugs/Intoxication</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="defaultCclPolitics"
              @bind="defaultCclDebatedSocialIssuesAndPolitics" disabled="@isBusy" />
            <label class="form-check-label" for="defaultCclPolitics">Politics/Debated Issues</label>
          </div>
        </div>
      }

      <div class="mt-3">
        <button class="btn btn-success" @onclick="SaveDefaultCcls" disabled="@isBusy">
          <i class="bi bi-save me-1"></i>Save Default CCLs
        </button>
      </div>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-lg-6">
      <div class="card mb-3">
        <div class="card-header">
          <i class="bi bi-search me-2"></i>Add Game
        </div>
        <div class="card-body">
          <div class="row g-2">
            <div class="col-8">
              <input type="text" class="form-control" placeholder="Search Twitch categories..." @bind="searchQuery"
                @bind:event="oninput" maxlength="100" disabled="@isBusy" />
            </div>
            <div class="col-4">
              <button class="btn btn-primary w-100" @onclick="Search" disabled="@isBusy">
                @if (isSearching)
                {
                  <span class="spinner-border spinner-border-sm me-1"></span>
                }
                <i class="bi bi-search me-1"></i>Search
              </button>
            </div>
          </div>

          @if (!string.IsNullOrWhiteSpace(searchError))
          {
            <div class="alert alert-danger mt-3 mb-0">
              <i class="bi bi-exclamation-triangle me-2"></i>@searchError
            </div>
          }

          @if (searchResults.Count > 0)
          {
            <div class="list-group mt-3">
              @foreach (var result in searchResults)
              {
                <div class="list-group-item d-flex align-items-center gap-3">
                  @if (!string.IsNullOrWhiteSpace(result.BoxArtUrl))
                  {
                    <img src="@FormatBoxArt(result.BoxArtUrl)" alt="@result.Name"
                      style="width: 52px; height: 72px; object-fit: cover;" />
                  }
                  <div class="flex-fill">
                    <div class="fw-semibold">@result.Name</div>
                    <div class="small text-muted">Game ID: @result.Id</div>
                  </div>
                  <button class="btn btn-sm btn-outline-primary" @onclick="() => ActivateFromSearch(result)"
                    disabled="@(isBusy)">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Activate
                  </button>
                </div>
              }
            </div>
          }
        </div>
      </div>

      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-journal-text me-2"></i>Game Library (@library.Count)
          </div>
          <button class="btn btn-sm btn-outline-secondary" @onclick="Reload" disabled="@isBusy">
            <i class="bi bi-arrow-clockwise me-1"></i>Refresh
          </button>
        </div>
        <div class="card-body p-0">
          @if (library.Count == 0)
          {
            <div class="text-center text-muted p-4">
              <i class="bi bi-controller fs-1 d-block mb-2"></i>
              No games in your library yet.
            </div>
          }
          else
          {
            <div class="list-group list-group-flush">
              @foreach (var game in library)
              {
                var isSelected = selectedGameId != null && string.Equals(selectedGameId, game.GameId,
                StringComparison.Ordinal);
                var isActive = !string.IsNullOrWhiteSpace(activeGameId) && string.Equals(activeGameId, game.GameId,
                StringComparison.Ordinal);

                <button type="button"
                  class="list-group-item list-group-item-action d-flex align-items-center gap-3 @(isSelected ? "active" : "")"
                  @onclick="() => SelectGame(game)" disabled="@isBusy">
                  @if (!string.IsNullOrWhiteSpace(game.BoxArtUrl))
                  {
                    <img src="@FormatBoxArt(game.BoxArtUrl)" alt="@game.GameName"
                      style="width: 52px; height: 72px; object-fit: cover;" />
                  }
                  <div class="flex-fill text-start">
                    <div class="fw-semibold">
                      @game.GameName
                      @if (isActive)
                      {
                        <span class="badge bg-primary ms-2">Active</span>
                      }
                    </div>
                    <div class="small text-muted">Last seen: @game.LastSeenAt.ToLocalTime().ToString("g")</div>
                  </div>
                  <i class="bi bi-chevron-right"></i>
                </button>
              }
            </div>
          }
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-sliders me-2"></i>Game Counters
          </div>
          <button class="btn btn-sm btn-outline-secondary" @onclick="RefreshCurrentCounters" disabled="@(isBusy || isRefreshingCurrentCounters)">
            @if (isRefreshingCurrentCounters)
            {
              <span class="spinner-border spinner-border-sm me-1"></span>
            }
            <i class="bi bi-arrow-clockwise me-1"></i>Refresh Counters
          </button>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <div class="fw-semibold mb-2"><i class="bi bi-activity me-2"></i>Current Live Counters</div>

            @if (currentCounters == null)
            {
              <div class="text-muted">Counters not loaded yet.</div>
            }
            else
            {
              <div class="row g-2">
                <div class="col-6">
                  <div class="border rounded p-2">
                    <div class="small text-muted">Deaths</div>
                    <div class="fw-semibold">@currentCounters.Deaths</div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="border rounded p-2">
                    <div class="small text-muted">Swears</div>
                    <div class="fw-semibold">@currentCounters.Swears</div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="border rounded p-2">
                    <div class="small text-muted">Screams</div>
                    <div class="fw-semibold">@currentCounters.Screams</div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="border rounded p-2">
                    <div class="small text-muted">Bits</div>
                    <div class="fw-semibold">@currentCounters.Bits</div>
                  </div>
                </div>
              </div>

              @if (currentCounters.CustomCounters != null && currentCounters.CustomCounters.Count > 0)
              {
                <div class="mt-3">
                  <div class="small text-muted mb-1">Custom counters</div>
                  <div class="list-group">
                    @foreach (var kvp in currentCounters.CustomCounters.OrderBy(k => k.Key, StringComparer.OrdinalIgnoreCase))
                    {
                      var name = counterLibrary.FirstOrDefault(c => string.Equals(c.CounterId, kvp.Key, StringComparison.OrdinalIgnoreCase))?.Name;
                      <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                          <div class="fw-semibold">@(string.IsNullOrWhiteSpace(name) ? kvp.Key : name)</div>
                          <div class="small text-muted">Key: @kvp.Key</div>
                        </div>
                        <span class="badge bg-secondary">@kvp.Value</span>
                      </div>
                    }
                  </div>
                </div>
              }

              <div class="small text-muted mt-2">Last updated: @currentCounters.LastUpdated.ToLocalTime().ToString("g")</div>
            }
          </div>

          @if (selectedGame == null)
          {
            <div class="text-muted">Select a game to edit its counters.</div>
          }
          else
          {
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <div class="h5 mb-1">@selectedGame.GameName</div>
                <div class="small text-muted">Game ID: @selectedGame.GameId</div>
              </div>
              <button class="btn btn-outline-primary" @onclick="ActivateSelected" disabled="@isBusy">
                <i class="bi bi-box-arrow-in-right me-1"></i>Activate
              </button>
            </div>

            <div class="row g-2">
              <div class="col-12">
                <label class="form-label">Enabled Counters</label>
                <div class="d-flex flex-wrap gap-3">
                  @foreach (var row in GetEnabledCountersForSelectedGame())
                  {
                    var id = GetCounterCheckboxId(row.CounterId);
                    <div class="d-flex align-items-center gap-2">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="@id" checked="@row.Enabled"
                          @onchange="e => OnLibraryCounterEnabledChanged(row.CounterId, e)" disabled="@isBusy" />
                        <label class="form-check-label" for="@id">@row.Name</label>
                      </div>

                      @if (row.IsCore)
                      {
                        <span class="badge bg-secondary">Core</span>
                      }
                      else
                      {
                        <button class="btn btn-sm btn-outline-danger" title="Remove from this game"
                          @onclick="() => RemoveLibraryCounterFromSelectedGame(row.CounterId)" disabled="@isBusy">
                          <i class="bi bi-trash"></i>
                        </button>
                      }
                    </div>
                  }
                </div>
                <div class="small text-muted mt-1">These control overlay visibility and default chat commands per game.
                  Add non-core counters via the library.</div>

                <div class="mt-2">
                  <button class="btn btn-sm btn-outline-primary" @onclick="OpenCounterLibraryModal"
                    disabled="@(isBusy || selectedGame == null)">
                    <i class="bi bi-plus-circle me-1"></i>Add Counters
                  </button>
                </div>
              </div>

              <div class="col-6">
                <label class="form-label">Deaths</label>
                <input class="form-control" type="number" @bind="editCounters.Deaths" disabled="@(!coreDeathsEnabled)" />
              </div>
              <div class="col-6">
                <label class="form-label">Swears</label>
                <input class="form-control" type="number" @bind="editCounters.Swears" disabled="@(!coreSwearsEnabled)" />
              </div>
              <div class="col-6">
                <label class="form-label">Screams</label>
                <input class="form-control" type="number" @bind="editCounters.Screams" disabled="@(!coreScreamsEnabled)" />
              </div>
              <div class="col-6">
                <label class="form-label">Bits</label>
                <input class="form-control" type="number" @bind="editCounters.Bits" disabled="@(!coreBitsEnabled)" />
              </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
              <button class="btn btn-success" @onclick="SaveSelected" disabled="@isBusy">
                @if (isBusy)
                {
                  <span class="spinner-border spinner-border-sm me-1"></span>
                }
                <i class="bi bi-save me-1"></i>Save
              </button>
            </div>

            <div class="small text-muted mt-3">
              Last updated: @editCounters.LastUpdated.ToLocalTime().ToString("g")
            </div>

            <hr />

            <div class="fw-semibold mb-2"><i class="bi bi-inbox me-2"></i>Request New Counter</div>
            <div class="row g-2">
              <div class="col-6">
                <label class="form-label">Name</label>
                <input class="form-control" @bind="counterRequestName" maxlength="60" />
              </div>
              <div class="col-6">
                <label class="form-label">Icon (Bootstrap)</label>
                <input class="form-control" @bind="counterRequestIcon" maxlength="60" placeholder="bi-emoji-smile" />
              </div>
              <div class="col-12">
                <label class="form-label">Description</label>
                <textarea class="form-control" rows="2" @bind="counterRequestDescription" maxlength="240"></textarea>
              </div>
            </div>
            <div class="d-flex justify-content-end mt-2">
              <button class="btn btn-outline-primary" @onclick="SubmitCounterRequest" disabled="@isBusy">
                <i class="bi bi-send me-1"></i>Submit Request
              </button>
            </div>
          }
        </div>
      </div>
    </div>
  </div>
}

@if (showCounterLibraryModal && selectedGame != null)
{
  <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-collection me-2"></i>Add Counters</h5>
          <button type="button" class="btn-close" @onclick="CloseCounterLibraryModal"></button>
        </div>
        <div class="modal-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="text-muted small">
              Add non-core counters to <span class="fw-semibold">@selectedGame.GameName</span>
              (<span class="text-muted">@selectedGame.GameId</span>).
            </div>
            <button class="btn btn-sm btn-outline-secondary" @onclick="LoadCounterLibrary" disabled="@isBusy">
              <i class="bi bi-arrow-clockwise me-1"></i>Refresh
            </button>
          </div>

          <input class="form-control mb-3" placeholder="Filter counters..." @bind="counterLibraryFilter"
            @bind:event="oninput" disabled="@isBusy" />

          @{
            var items = GetLibraryCountersForModal().ToList();

            if (items.Count == 0)
            {
              <div class="text-muted">No counters found in the library.</div>
            }
            else
            {
              <div class="list-group">
                @foreach (var item in items)
                {
                  var alreadyAdded = editCounters.CustomCounters != null &&
                  editCounters.CustomCounters.ContainsKey(item.CounterId);
                  <div class="list-group-item d-flex align-items-center justify-content-between">
                    <div>
                      <div class="fw-semibold">@item.Name</div>
                      <div class="small text-muted">Key: @item.CounterId</div>
                    </div>
                    @if (alreadyAdded)
                    {
                      <button class="btn btn-sm btn-outline-danger"
                        @onclick="() => RemoveLibraryCounterFromSelectedGame(item.CounterId)" disabled="@isBusy">
                        <i class="bi bi-trash me-1"></i>Remove
                      </button>
                    }
                    else
                    {
                      <button class="btn btn-sm btn-outline-success"
                        @onclick="() => AddLibraryCounterToSelectedGame(item.CounterId)" disabled="@isBusy">
                        <i class="bi bi-plus-circle me-1"></i>Add
                      </button>
                    }
                  </div>
                }
              </div>
            }
          }
        </div>
        <div class="modal-footer">
          <button class="btn btn-outline-secondary" @onclick="CloseCounterLibraryModal" disabled="@isBusy">Close</button>
        </div>
      </div>
    </div>
  </div>
}

@code {
  [Parameter] public string UserId { get; set; } = string.Empty;

  private bool isLoading = true;
  private bool isBusy = false;

  private string? successMessage;
  private string? errorMessage;

  private string searchQuery = string.Empty;
  private bool isSearching = false;
  private string? searchError;
  private List<TwitchCategoryDto> searchResults = new();

  private List<GameLibraryItem> library = new();
  private string? activeGameId;

  private string? loadedUserId;
  private User? loadedUser;
  private string? selectedGameId;
  private GameLibraryItem? selectedGame;
  private Counter editCounters = new();

  private bool useDefaultCcls;
  private bool defaultCclProfanityVulgarity;
  private bool defaultCclGambling;
  private bool defaultCclViolentGraphic;
  private bool defaultCclSexualThemes;
  private bool defaultCclDrugsIntoxication;
  private bool defaultCclDebatedSocialIssuesAndPolitics;

  private bool coreDeathsEnabled = true;
  private bool coreSwearsEnabled = true;
  private bool coreScreamsEnabled = true;
  private bool coreBitsEnabled = false;

  private Counter? currentCounters;
  private bool isRefreshingCurrentCounters;

  private List<CounterLibraryItem> counterLibrary = new();
  private bool showCounterLibraryModal = false;
  private string counterLibraryFilter = string.Empty;
  private string counterRequestName = string.Empty;
  private string counterRequestIcon = string.Empty;
  private string counterRequestDescription = string.Empty;

  private sealed class EnabledCounterRow
  {
    public string CounterId { get; set; } = string.Empty;
    public string Name { get; set; } = string.Empty;
    public bool Enabled { get; set; }
    public bool IsCore { get; set; }
  }

  private IEnumerable<EnabledCounterRow> GetEnabledCountersForSelectedGame()
  {
    // Always show core counters for the game.
    yield return new EnabledCounterRow { CounterId = "deaths", Name = "Deaths", Enabled = coreDeathsEnabled, IsCore = true };
    yield return new EnabledCounterRow { CounterId = "swears", Name = "Swears", Enabled = coreSwearsEnabled, IsCore = true };
    yield return new EnabledCounterRow
    {
      CounterId = "screams",
      Name = "Screams",
      Enabled = coreScreamsEnabled,
      IsCore = true
    };
    yield return new EnabledCounterRow { CounterId = "bits", Name = "Bits", Enabled = coreBitsEnabled, IsCore = true };

    // Only show non-core counters that are actually part of this game.
    if (editCounters.CustomCounters == null || editCounters.CustomCounters.Count == 0)
    {
      yield break;
    }

    foreach (var counterId in editCounters.CustomCounters.Keys.OrderBy(k => k, StringComparer.OrdinalIgnoreCase))
    {
      var name = counterLibrary.FirstOrDefault(c => string.Equals(c.CounterId, counterId,
      StringComparison.OrdinalIgnoreCase))?.Name;
      yield return new EnabledCounterRow
      {
        CounterId = counterId,
        Name = string.IsNullOrWhiteSpace(name) ? counterId : name,
        Enabled = IsLibraryCounterEnabled(counterId),
        IsCore = false
      };
    }
  }

  private IEnumerable<CounterLibraryItem> GetLibraryCountersForModal()
  {
    if (selectedGame == null)
    {
      return Enumerable.Empty<CounterLibraryItem>();
    }

    var candidates = counterLibrary
    .Where(IsNonCoreCounter);

    var filter = (counterLibraryFilter ?? string.Empty).Trim();
    if (!string.IsNullOrWhiteSpace(filter))
    {
      candidates = candidates.Where(c =>
      (!string.IsNullOrWhiteSpace(c.Name) && c.Name.Contains(filter, StringComparison.OrdinalIgnoreCase))
      || (!string.IsNullOrWhiteSpace(c.CounterId) && c.CounterId.Contains(filter, StringComparison.OrdinalIgnoreCase)));
    }

    return candidates.OrderBy(c => c.Name);
  }

  private bool IsNonCoreCounter(CounterLibraryItem item)
  {
    return !IsCoreCounterId(item.CounterId);
  }

  private void OpenCounterLibraryModal()
  {
    if (selectedGame == null) return;
    counterLibraryFilter = string.Empty;
    showCounterLibraryModal = true;
  }

  private void CloseCounterLibraryModal()
  {
    showCounterLibraryModal = false;
  }

  protected override async Task OnParametersSetAsync()
  {
    if (string.IsNullOrWhiteSpace(UserId))
    {
      return;
    }

    if (string.Equals(loadedUserId, UserId, StringComparison.Ordinal))
    {
      return;
    }

    loadedUserId = UserId;
    await LoadAsync();
  }

  private async Task LoadAsync()
  {
    isLoading = true;
    errorMessage = null;
    successMessage = null;

    try
    {
      loadedUser = await UserRepository.GetUserAsync(UserId);
      LoadDefaultCclsFromUser(loadedUser);

      await LoadCurrentCountersAsync();

      library = (await GameLibraryRepository.ListAsync(UserId)).ToList();
      var ctx = await GameContextRepository.GetAsync(UserId);
      activeGameId = ctx?.ActiveGameId;

      counterLibrary = (await CounterLibraryRepository.ListAsync()).ToList();

      // If current selection disappeared, clear it.
      if (!string.IsNullOrWhiteSpace(selectedGameId) && library.All(g => !string.Equals(g.GameId, selectedGameId,
      StringComparison.Ordinal)))
      {
        selectedGameId = null;
        selectedGame = null;
        editCounters = new Counter { TwitchUserId = UserId, LastUpdated = DateTimeOffset.UtcNow };
      }
    }
    catch (Exception ex)
    {
      errorMessage = $"Failed to load games: {ex.Message}";
      library = new List<GameLibraryItem>();
    }
    finally
    {
      isLoading = false;
    }
  }

  private async Task RefreshCurrentCounters()
  {
    if (isBusy) return;
    await LoadCurrentCountersAsync();
  }

  private async Task LoadCurrentCountersAsync()
  {
    if (string.IsNullOrWhiteSpace(UserId)) return;

    isRefreshingCurrentCounters = true;
    try
    {
      currentCounters = await CounterRepository.GetCountersAsync(UserId);
      currentCounters ??= new Counter { TwitchUserId = UserId, LastUpdated = DateTimeOffset.UtcNow };
    }
    catch (Exception ex)
    {
      errorMessage = $"Failed to load current counters: {ex.Message}";
      currentCounters = null;
    }
    finally
    {
      isRefreshingCurrentCounters = false;
    }
  }

  private void LoadDefaultCclsFromUser(User? user)
  {
    var enabled = user?.Features?.StreamSettings?.DefaultContentClassificationLabels;
    if (enabled == null)
    {
      useDefaultCcls = false;
      defaultCclProfanityVulgarity = false;
      defaultCclGambling = false;
      defaultCclViolentGraphic = false;
      defaultCclSexualThemes = false;
      defaultCclDrugsIntoxication = false;
      defaultCclDebatedSocialIssuesAndPolitics = false;
      return;
    }

    useDefaultCcls = true;
    var set = enabled.ToHashSet(StringComparer.OrdinalIgnoreCase);
