        if (defaultCclGambling) enabled.Add("Gambling");
        if (defaultCclProfanityVulgarity) enabled.Add("ProfanityVulgarity");

        loadedUser.Features.StreamSettings.DefaultContentClassificationLabels = enabled;
      }

      await UserRepository.SaveUserAsync(loadedUser);
      successMessage = "Default CCLs saved.";
