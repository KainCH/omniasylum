@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>OmniAsylum Stream Tools</PageTitle>

<div class="text-center mt-5">
    <h1 class="display-4">OmniAsylum Stream Tools</h1>
    <p class="lead">Manage your stream counters, overlays, and more.</p>

    <AuthorizeView>
        <Authorized>
            <div class="mt-4">
                <p>You are logged in as <strong>@context.User.Identity?.Name</strong></p>
                <a href="dashboard" class="btn btn-primary btn-lg">Go to Dashboard</a>
                <a href="auth/logout" class="btn btn-outline-danger btn-lg ms-2">Logout</a>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="mt-4">
                <p>Please log in with your Twitch account to access the dashboard.</p>
                <a href="auth/login?returnUrl=/dashboard" class="btn btn-twitch btn-lg">
                    <i class="bi bi-twitch"></i> Login with Twitch
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

<style>
    .btn-twitch {
        background-color: #9146FF;
        color: white;
    }
    .btn-twitch:hover {
        background-color: #772ce8;
        color: white;
    }
</style>
