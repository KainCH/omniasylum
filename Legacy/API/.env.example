# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5500,http://127.0.0.1:5500

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5500

# Database Mode: 'local' or 'azure'
DB_MODE=local

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-change-in-production

# Twitch API Credentials (Application credentials)
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# Twitch OAuth Redirect URI (must match Twitch app settings)
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Azure Configuration (Production only)
# When using Azure, these are automatically retrieved:
AZURE_KEYVAULT_NAME=
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
